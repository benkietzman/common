/*! \file Storage
* \brief Storage Class
*
* Provides storage functionality.
*/

#ifndef _COMMON_STORAGE_
#define _COMMON_STORAGE_

// {{{ includes
#include <mutex>
using namespace std;
#include "Json"
// }}}

extern "C++"
{
  namespace common
  {
    // {{{ Storage
    class Storage
    {
      private:
      mutex m_mutexStorage;
      Json *m_ptStorage;

      public:
      Storage();
      ~Storage();
      Json *get();
      void lock();
      Json *ptr();
      void put(Json *ptStorage);
      bool request(const string strAction, list<string> keys, Json *ptData, string &strError);
      void unlock();
    };
    // }}}
  }
}

#endif
